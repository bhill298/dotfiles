Host github.com
    ForwardX11 no
    IdentityFile /home/path/.ssh/key_file_name.pub
    IdentitiesOnly yes

# Useful flags:
# User <user_login>
# Hostname <hostname alias>
# ProxyCommand <cmd_to_execute_instead (%h=hostname, %p=port, %r=remote user)>
# StrictHostKeyChecking <yes/no/accept-new> (if yes -- refuse to connect if host key in ~/.ssh/known_hosts has changed and ask to add new ones; accept-new works like yes but automatically adds new ones) 
# For others: see man ssh_config
